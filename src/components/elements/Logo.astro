---
import { getLangFromUrl } from "../../i18n/utils";
import { defaultLang } from "../../i18n/ui";

const { logoClass, logoUrl } = Astro.props;

const language = getLangFromUrl(Astro.url)
---

<div class=`${logoClass} logo`>
    <a href={language === defaultLang ? '/' : `/${language}`}>
        <img src={import.meta.env.STRAPI_URL+logoUrl} alt="logo" />
    </a>
</div>
