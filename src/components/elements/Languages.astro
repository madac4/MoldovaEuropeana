---
const languages = [
    {
        name: 'Română',
        code: 'ro',
        flag: '/assets/images/ro.svg',
    },
    {
        name: 'Rusa',
        code: 'ru',
        flag: '/assets/images/ru.svg',
    },
    {
        name: 'Engleza',
        code: 'en',
        flag: '/assets/images/en.svg',
    },
];
---

<div class="header__languages header-languages">
    <div class="header-languages__current">
        <img src={languages[0].flag} alt={languages[0].name} />
        <i class="mdi mdi-chevron-down"></i>
    </div>
    <div class="header-languages__list">
        {
            languages.map((language) => (
                <a href="#">
                    <img src={language.flag} alt={language.name} />
                </a>
            ))
        }
    </div>
</div>
